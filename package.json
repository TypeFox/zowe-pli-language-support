{
    "name": "pl-one-workspace",
    "description": "Base workspace package",
    "version": "0.0.1",
    "type": "module",
    "private": true,
    "scripts": {
        "clean": "npm run clean --workspaces",
        "watch": "tsc -b tsconfig.build.json --watch",
        "build": "npm run langium:generate && tsc -b tsconfig.build.json && npm run build --workspaces && node ./scripts/merge-tmlanguage.mjs",
        "build:clean": "npm run clean && npm run build",
        "lint": "eslint src --ext ts",
        "langium:generate": "npm run --workspace packages/language langium:generate",
        "langium:watch": "npm run --workspace packages/language langium:watch",
        "test": "vitest"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@typescript-eslint/parser": "~7.13.0",
        "@typescript-eslint/eslint-plugin": "~7.13.0",
        "eslint": "~8.57.0",
        "deepmerge": "^1.5.0",
        "shx": "~0.3.4",
        "typescript": "~5.4.5"
    },
    "volta": {
        "node": "18.20.3",
        "npm": "10.7.0"
    },
    "workspaces": [
        "packages/language",
        "packages/extension"
    ]
}
